@using MvcProjectCV.Models.Entity
@model List<Skill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string labelcolor = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">My Skill List</h3>
                            </div>
                            <div class="card-body">
                                <a href="/Skill/NewSkill/" class="btn btn-info">Add new skill</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Skill</th>
                                            <th>Progress</th>
                                            <th style="width: 40px">Rate</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.Rate >= 0 && x.Rate <= 50)
                                            {
                                                color = "progress-bar bg-danger";
                                                labelcolor = "badge bg-danger";
                                            }

                                            if (x.Rate >= 51 && x.Rate <= 70)
                                            {
                                                color = "progress-bar bg-warning";
                                                labelcolor = "badge bg-warning";
                                            }

                                            if (x.Rate >= 71 && x.Rate <= 84)
                                            {
                                                color = "progress-bar bg-primary";
                                                labelcolor = "badge bg-primary";
                                            }

                                            if (x.Rate >= 85 && x.Rate <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                                labelcolor = "badge bg-success";
                                            }
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Skill1</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @x.Rate%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelcolor">@x.Rate%</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Skill/EditSkill/@x.ID"><i class="fas fa-pencil-alt"></i>Edit</a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Skill/DeleteSkill/@x.ID"><i class="fas fa-trash"></i>Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>

