@using MvcProjectCV.Models.Entity
@model List<Certificate>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string color = ""; }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var x in Model)
                                    {
                                        if (x.ID % 2 == 0)
                                        {
                                            color = "btn btn-success";
                                        }
                                        else
                                        {
                                            color = "btn btn-danger";
                                        }
                                        <div class="time-label">
                                            <a href="/Certificate/GetCertificate/@x.ID/" class="@color">
                                                <span class="@color">
                                                    @x.Date
                                                </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-folder bg-warning"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @x.Description
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    </div>
                                <a href="/Certificate/NewCertificate/" class="btn btn-success">Add new certificate</a>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
    </section>
</body>
</html>