@model MvcProjectCV.Models.Entity.Admin

@{
    ViewBag.Title = "AdminEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h4>Edit Admin</h4>
<br />
<form class="form-group" method="post" onsubmit="showMessage()">
    @Html.Label("Admin ID")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.Label("Username")
    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
    <br />
    @Html.Label("Password")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Save the changes</button>
</form>
<script>
    function showMessage() {
        alert("User has been updated!");
    }
</script>


